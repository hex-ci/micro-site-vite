{
  "name": "micro-site-vite",
  "version": "1.0.0",
  "description": "基于 Vite 的微站点脚手架",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hex-ci/micro-site-vite.git"
  },
  "author": "Hex",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hex-ci/micro-site-vite/issues"
  },
  "scripts": {
    "dev": "nodemon server/index.js",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "lint": "run-p lint:eslint lint:stylelint",
    "lint:fix": "run-p lint:eslint:fix lint:stylelint:fix",
    "lint:eslint": "eslint --cache --max-warnings 0 \"src/**/*.{vue,js,ts,tsx}\" --ignore-path .gitignore",
    "lint:eslint:fix": "eslint --cache --max-warnings 0 \"src/**/*.{vue,js,ts,tsx}\" --ignore-path .gitignore --fix",
    "lint:stylelint": "stylelint \"src/**/*.{vue,css,scss}\" --cache",
    "lint:stylelint:fix": "stylelint \"src/**/*.{vue,css,scss}\" --cache --fix",
    "type-check": "vue-tsc --build --force",
    "code-check": "run-p type-check lint",
    "build": "run-s code-check \"build-only {@}\" --",
    "build:test:cdn": "cross-env MICRO_SITE_BUILD_MODE=test MICRO_SITE_USE_CDN=yes run-s code-check build-only",
    "build:cdn": "cross-env MICRO_SITE_USE_CDN=yes run-s code-check build-only",
    "build-only": "node utils/build.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cb-template": "^1.3.9",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "express": "^4.19.2",
    "lodash-es": "^4.17.21",
    "morgan": "^1.10.0",
    "parseurl": "^1.3.3",
    "pinia": "^2.2.1",
    "qs": "^6.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vue": "^3.4.37",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.6.2",
    "@stylistic/eslint-plugin-migrate": "^2.6.2",
    "@stylistic/stylelint-config": "^2.0.0",
    "@stylistic/stylelint-plugin": "^3.0.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.44",
    "@types/qs": "^6.9.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "ali-oss": "^6.20.0",
    "ansi-colors": "^4.1.3",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "cpy": "^11.1.0",
    "del": "^7.1.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.27.0",
    "fancy-log": "^2.0.0",
    "get-port": "^7.1.0",
    "glob": "^10.4.5",
    "http-proxy-middleware": "^3.0.0",
    "less": "^4.2.0",
    "meow": "^9.0.0",
    "mime": "^4.0.4",
    "nodemon": "^3.1.4",
    "npm-run-all2": "^6.2.2",
    "postcss": "^8.4.41",
    "postcss-html": "^1.7.0",
    "sass": "^1.77.8",
    "sharp": "^0.33.4",
    "stylelint": "^16.8.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-order": "^6.0.4",
    "svgo": "^3.3.2",
    "typescript": "~5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-checker": "^0.7.2",
    "vite-plugin-image-optimizer": "^1.1.8",
    "vue-tsc": "^2.0.29",
    "ws": "^8.18.0"
  },
  "imports": {
    "#server/*": "./server/*"
  }
}
